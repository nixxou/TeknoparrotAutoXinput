{
	"global": {
		"_comment": "To use resolution upscale you need my custom demulshooter, i now use directly the game executable now that tp is able to launch it without using the shell",
		"rom": "tsr",
		"target": "ringedge2",
		"64bits": "False",
		"windowed": "General,Windowed,1",
		    "showGameOptionPatchLang": "french",
		"magpieClass": "TF2_Gun | Release",
		"magpie3DGameMode": "False",
		"magpieDisableDirectFlip": "False",
		"magpieAllowScalingMaximized": "True",
		"magpieLaunchBefore": "False",
		"magpieExecutable": "Transformers2.exe",
		"recommanded_vjoy_fullscreen": "sinden_and_notsinden",
		"recommanded_vjoy_windowed": "sinden_and_notsinden"
	},
    "tpoptions": {
        "set_displaymode_recommanded": {
            "General||Windowed": "0"
        },
        "set_fullscreen": {
            "General||Windowed": "0"
        },
        "set_windowed": {
            "General||Windowed": "1"
        }
    },
    "gameoptions": {
        "recommanded_gameoptions & fullscreen & at_least_one_sinden & no_sinden_using_vjoy": {
            "gun_ExtraSinden": "-action \"set-offsets -1.5,1.03,-1.5,1.03\"",
            "gun_useExtraSinden": "True"
        },
        "recommanded_gameoptions & fullscreen & at_least_one_sinden": {
            "tmpGunXFormula": "[OX]+(([OX]-(32767/2))*0.03093)",
            "tmpGunYFormula": "[OY]+(([OY]-(32767/2))*0.03093)"
        }
    }
}