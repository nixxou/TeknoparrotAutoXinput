{
	"global": {
		"_comment": "4/3 in windowed, wide in fullscreen",
		"rom": "",
		"target": "",
		"64bits": "False",
		"windowed": "General,Windowed,1",
		"magpieClass": "ClassNameOfThePFW@XWinApplication",
		"magpie3DGameMode": "True",
		"magpieDisableDirectFlip": "False",
		"magpieAllowScalingMaximized": "False",
		"magpieLaunchBefore": "False",
		"magpieNoMoveWindow": "True",
		"recoil": "500",
		"recommanded_vjoy_fullscreen": "sinden_and_notsinden",
		"recommanded_vjoy_windowed": "sinden_and_notsinden,wiimote,gamepad"
	},
    "tpoptions": {
		"recommanded_tp_settings":{
			"General||HideCursor": "1",
			"General||FpsLimitEnable": "1",
			"General||FpsLimit": "60",
			"General||UseLocaleEmulator": "1",
			"General||EnglishTestMenu": "1"
		},
        "hide_crosshair": {
            "Crosshairs||Enable": "0"
        },
        "show_crosshair": {
            "Crosshairs||Enable": "1"
        },		
        "set_displaymode_in_tp_settings & set_displaymode_recommanded": {
            "General||Windowed": "1"
        },
        "set_displaymode_in_tp_settings & set_fullscreen": {
            "General||Windowed": "0"
        },
        "set_displaymode_in_tp_settings & set_windowed": {
            "General||Windowed": "1"
        }
    },
	"gameoptions": {
        "recommanded_gameoptions & fullscreen & at_least_one_sinden & no_sinden_using_vjoy": {
            "gun_ExtraSinden": "-action \"set-offsets -1.5,1.03,-1.5,1.03\"",
            "gun_useExtraSinden": "True"
        },
        "recommanded_gameoptions & fullscreen & at_least_one_sinden": {
            "tmpGunXFormula": "[X]+(([X]-(32767/2))*0.03093)",
            "tmpGunYFormula": "[Y]+(([Y]-(32767/2))*0.03093)"
        },
        "recommanded_gameoptions & windowed & !at_least_one_sinden & gun1_is_gun4ir_without_vjoy": {
            "gunA_4tiers": "2"
        },
        "recommanded_gameoptions & windowed & !at_least_one_sinden & gun2_is_gun4ir_without_vjoy": {
            "gunB_4tiers": "2"
        }
	}
}