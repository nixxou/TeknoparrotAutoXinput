{
  "global": {
    "_comment": "Under 2k, some part of the screen are croped, small aim correction",
    "windowed": "General,Windowed,1",
    "originalRes": "720x1080",
    "showGameOptionBezel": "True",
    "showGameOptionCrt": "False",
    "showGameOptionVsync": "False",
    "showGameOptionFFB": "False",
    "showGameOptionKeepAspectRatio": "True",
    "showGameOptionPatchLang": "False",
    "showGameOptionPerf": "False",
    "upscaleFullscreen": "True",
    "upscaleWindowed": "False",
    "forceResSwitchFullscreen": "True",
    "rom": "eadp",
    "target": "ttx",
    "64bits": "False",
    "magpieClass": "Eva",
    "magpie3DGameMode": "True",
    "magpieDisableDirectFlip": "False",
    "magpieAllowScalingMaximized": "False",
    "magpieLaunchBefore": "False",
    "magpieNoMoveWindow": "False",
    "recommanded_vjoy_fullscreen": "all",
    "recommanded_vjoy_windowed": "all"
  },
  "tpoptions": {
    "set_displaymode_recommanded": {
      "General||Windowed": "0"
    },
    "set_fullscreen": {
      "General||Windowed": "0"
    },
    "set_windowed": {
      "General||Windowed": "1"
    },
    "recommanded_tp_settings": {
      "General||Hide Shoot the display msg": "1",
      "Attraction Doors||Enable": "1"
    },
    "bezel & fullscreen": {
      "Bezel||Enable": "1",
      "Border||Enable": "1",
      "Attraction Doors||Enable": "1"
    },
    "no_bezel": {
      "Bezel||Enable": "0",
      "Border||Enable": "0",
      "Attraction Doors||Enable": "0"
    },
    "windowed": {
      "Bezel||Enable": "0",
      "Border||Enable": "0",
      "Attraction Doors||Enable": "0"
    },
    "hide_crosshair": {
      "Crosshairs||Enable": "0"
    },
    "show_crosshair": {
      "Crosshairs||Enable": "1"
    }
  },
  "gameoptions": {
    "recommanded_gameoptions & fullscreen & at_least_one_sinden & no_sinden_using_vjoy": {
      "gun_ExtraSinden": "-action \"set-offsets -1.5,1.03,-1.5,1.03\"",
      "gun_useExtraSinden": "True"
    },
    "recommanded_gameoptions & fullscreen": {
      "tmpGunAMinMax": "100",
      "tmpGunBMinMax": "100"
    },
    "recommanded_gameoptions & fullscreen & at_least_one_sinden": {
      "tmpGunXFormula": "[X]+(([X]-(32767/2))*0.03093)",
      "tmpGunYFormula": "[Y]+(([Y]-(32767/2))*0.03093)"
    },
    "recommanded_gameoptions & fullscreen & no_keepaspectratio": {
      "tmpGunXFormula": "[X]+(([X]-(32767/2))*-0.68)",
      "tmpGunYFormula": "[Y]+(([Y]-(32767/2))*0)"
    }	
  }
}