{
	"global": {
		"_comment": "I use windowed, because of incompatibility with ffb and reshade, if i use fullscreen i have to inject the ffb dll post launch, also in 4K i added some magnifier in reshade to move some ui element",
		"windowed": "General,Windowed,1",
		"magpieClass": "FREEGLUT",
		"magpie3DGameMode": "True",
		"magpieDisableDirectFlip": "False"
	},
	"tpoptions": {
		"set_displaymode_in_tp_settings & set_displaymode_recommanded": {
			"General||Windowed" : "1"
		},
		"set_displaymode_in_tp_settings & set_fullscreen": {
			"General||Windowed" : "0"
		},
		"set_displaymode_in_tp_settings & set_windowed": {
			"General||Windowed" : "1"
		},		
		"ffb":{
			"General||Enable Outputs" : "1"
		},
		"recommanded_tp_settings & xinput": {
			"General||Reverse Y Axis" : "1"
		}
	},
	"gameoptions": {
		"recommanded_gameoptions": {
			"runRivaTuner" : "True"
		},
		"recommanded_gameoptions & ffb & fullscreen": {
			"useInjector": "true",
			"injectorDllList": "winmm.dll.inject",
			"injectorDelay": "40"
			
		}
	}
}