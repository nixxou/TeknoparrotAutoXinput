{
	"global": {
		"_comment": "When i try to upscale it i can manage somehow to make it work but aim is not good, so i keep it stretched and windowed",
		"rom": "og",
		"target": "ringwide",
		"64bits": "False",
		"windowed": "General,Windowed,1",
		"magpieClass": "A",
		"magpie3DGameMode": "True",
		"magpieDisableDirectFlip": "False",
		"magpie3DGameMode": "True",
		"magpieDisableDirectFlip": "False",
		"magpieAllowScalingMaximized": "True",
		"magpieLaunchBefore": "False",
		"magpieNoMoveWindow": "True",
		"magpieNoLateFocus": "False"
	},
	"tpoptions": {
		"set_displaymode_in_tp_settings & set_displaymode_recommanded": {
			"General||Windowed" : "1"
		},
		"set_displaymode_in_tp_settings & set_fullscreen": {
			"General||Windowed" : "0"
		},
		"set_displaymode_in_tp_settings & set_windowed": {
			"General||Windowed" : "1"
		},
        "recommanded_tp_settings": {
            "General||Enable Outputs": "1",
			"General||HideCursor": "1"
        }		
	},
	"gameoptions": {
		"recommanded_gameoptions": {
			"runRivaTuner" : "True",
			"useMagpie" : "2"
		},
        "recommanded_gameoptions & at_least_one_sinden & no_sinden_using_vjoy": {
            "gun_ExtraSinden": "-action \"set-offsets -1.5,1.03,-1.5,1.03\"",
            "gun_useExtraSinden": "True"
        },
        "recommanded_gameoptions & at_least_one_sinden": {
            "tmpGunXFormula": "[X]+(([X]-(32767/2))*0.03093)",
            "tmpGunYFormula": "[Y]+(([Y]-(32767/2))*0.03093)"
        }
	}
}